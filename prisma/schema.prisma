type Specs {
    key   String
    value String
}

enum PStatus {
    active
    disabled
    review
    incomplete
}

type MoreDescr {
    id  String
    url String
}

type VariantOption {
    k String
    v String
}

type ProductVariant {
    id        String
    title     String
    price     Int
    image     String
    options   VariantOption[]
    sku       String
    updatedAt String
}

model Product {
    id                 String           @id @default(auto()) @map("_id") @db.ObjectId
    brand              String
    category           String
    description        String
    discountPercentage Float
    images             String[]
    price              Int
    promotion          String[]
    rating             Float
    status             String
    specs              Specs[]
    sold               Int?
    stock              Int
    tags               String[]
    thumbnail          String
    title              String
    variants           ProductVariant[]
    sid                String
}

enum VRole {
    owner
    member
}

enum AuthRole {
    vendor
    admin
}

enum SVStatus {
    disabled
    active
    // review
}

type StoreVendor {
    id     String
    role   VRole
    status SVStatus
    email  String
}

type StoreAccount {
    number String
    name   String
    bank   String
}

type StoreSupport {
    mobile   String
    whatsapp String
}

enum SStatus {
    active
    disabled
    review
}

model Store {
    id        String        @id @default(auto()) @map("_id") @db.ObjectId
    vendors   StoreVendor[]
    name      String        @unique()
    about     String
    photoUrl  String        @default("")
    bannerUrl String        @default("")
    status    SStatus       @default(review)
    email     String        @unique() @default("")
    account   StoreAccount
    support   StoreSupport
}

enum Status {
    active
    disabled
}

model Vendor {
    id        String   @id @default(auto()) @map("_id") @db.ObjectId
    firstName String
    lastName  String
    uid       String   @unique()
    vendorId  String   @unique()
    role      AuthRole @default(vendor)
    email     String   @unique()
    photoUrl  String?
    phoneNo   String
    // store     String[]
    location  String   @default("")
    address   String   @default("")
    status    Status   @default(active)
}

model Customer {
    id        String @id @default(auto()) @map("_id") @db.ObjectId
    uid       String
    // cartId          String?
    email     String
    firstName String
    lastName  String
    phone     String
    //   shippingDetails UsersShippingDetails[]
    type      String
    //   preferences     UserPreferences
}

enum NType {
    support
    complaint
    order
}

enum NStatus {
    opened
    sealed
}

model Notification {
    id     String    @id @default(auto()) @map("_id") @db.ObjectId
    sent   DateTime  @default(now())
    opened DateTime?
    status NStatus   @default(sealed)
    title  String
    body   String
    // body2  String
    type   NType     @default(order)
    rid    String[]
}

type OrdersItem {
    id                 String  @map("_id")
    brand              String?
    description        String
    discountPercentage Float?
    price              Int
    quantity           Int
    shortDescription   String?
    thumbnail          String?
    title              String
}

type OrdersPayment {
    method String
    date   DateTime?
}

type OrdersShippingDetails {
    address   String
    email     String
    firstName String
    lastName  String
    location  String
    notes     String?
    phone     String
    state     String
}

type OrdersShippingInfo {
    address   String
    email     String
    firstName String
    lastName  String
    location  String
    notes     String
    phone     String
    state     String
}

type OrdersShippingOption {
    price Int
    type  String
}

enum OrderStatus {
    pay_pending
    pay_successful
    pay_cancelled
    pay_closed
    pay_failed
    cancelled
    delivered
}

model Order {
    id               String                @id @default(auto()) @map("_id") @db.ObjectId
    customerId       String                @default("guest")
    dateTime         DateTime              @default(now()) @db.Date
    items            OrdersItem[]
    orderId          String
    payment          OrdersPayment
    shipping_details OrdersShippingDetails
    shipping_option  OrdersShippingOption
    status           OrderStatus           @default(pay_pending)
    subTotal         Int
    total            Int
    txRef            String?
    reference        String[]
    sid              String                @default("delorand")
}

type SaleCustomer {
    name String
    id   String
}

model Category {
    id     String  @id @default(auto()) @map("_id") @db.ObjectId
    parent String?
    name   String  @unique()
    slug   String  @unique()
    tid    Int
}

type AssetImages {
    url String
    tag String
}

type AssetTexts {
    body String
    tag  String
}

model Asset {
    id          String        @id @default(auto()) @map("_id") @db.ObjectId
    basepath    String
    path        String
    title       String
    description String
    code        Int
    images      AssetImages[]
    texts       AssetTexts[]
}

model Auth {
    id       String @id @default(auto()) @map("_id") @db.ObjectId
    vendorId String @unique()
    hash     String
}
