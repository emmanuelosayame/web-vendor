model Product {
    id                 String   @id @default(auto()) @map("_id") @db.ObjectId
    brand              String
    category           String
    description        String
    discountPercentage Float
    images             String[]
    price              Int
    promotion          String[]
    rating             Float
    shortDescription   String
    status             String
    stock              Int
    tags               String[]
    thumbnail          String
    title              String
    sold               Int?
    sid                String
}

enum VRole {
    owner
    admin
}

enum AuthRole {
    vendor
    superAdmin
}

enum MStatus {
    disabled
    active
    review
}

type StoreVendor {
    id     String
    role   VRole
    status MStatus
    email  String
}

model Store {
    id      String        @id @default(auto()) @map("_id") @db.ObjectId
    vendors StoreVendor[]
    name    String
    about   String
}

model Vendor {
    id        String   @id @map("_id") @db.ObjectId
    firstName String
    lastName  String
    uid       String
    role      AuthRole
    email     String
    photoUrl  String?
    phoneNo   String
    store     String[]
}

enum NType {
    support
    complaint
    order
}

enum NStatus {
    opened
    sealed
    pinned
}

model Notification {
    id     String   @id @default(auto()) @map("_id") @db.ObjectId
    on     DateTime @default(now())
    read   DateTime @updatedAt()
    status NStatus
    title  String
    body   String
    type   NType
}
